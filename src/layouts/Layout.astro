---
import './global.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />

		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Aprenda a importar iPhones diretamente da fonte e economize com o Método iPhone Pro. Descubra como evitar intermediários e reduzir custos agora mesmo!">
		<meta name="keywords" content="importar iPhones, economizar em iPhones, Método iPhone Pro, importação de eletrônicos, preços baixos iPhone">
		<meta name="author" content="Seu Nome ou Empresa">
		<title>Método iPhone Pro</title>

		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content="Descubra Como Importar iPhones e Economizar - Método iPhone Pro">
		<meta property="og:description" content="Aprenda a importar iPhones diretamente da fonte e economize até com o Método iPhone Pro. Descubra como evitar intermediários e reduzir custos agora mesmo!">
		<meta property="og:image" content="https://eimportaiphone.com/og-image.webp"> <!-- Substitua pela URL da sua imagem -->
		<meta property="og:url" content="https://eimportaiphone.com/"> <!-- Substitua pela URL da sua página -->
		<meta property="og:type" content="website">
		<meta property="og:site_name" content="Seu Nome ou Empresa">
		<meta property="og:locale" content="pt_BR">
	
		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta name="twitter:title" content="Descubra Como Importar iPhones e Economizar - Método iPhone Pro">
		<meta name="twitter:description" content="Aprenda a importar iPhones diretamente da fonte e economize com o Método iPhone Pro. Descubra como evitar intermediários e reduzir custos agora mesmo!">
		<meta name="twitter:image" content="https://eimportaiphone.com/og-image.webp"> <!-- Substitua pela URL da sua imagem -->

		<title>{title}</title>
	</head>
	<body class=" bg-black min-h-screen text-white  font-sf  ">
		<slot />
	</body>
</html>


<style>
	/* Estilos generales */
	body {
		background-image: 
		  url('/miniphone1.png'),
		  url('/miniphone2.png'),
		  url('/miniphone3.png'),
		  url('/shape2.svg'),
		  url('/shape3.svg'),
		  url('/shape4.svg'),
		  url('/shape5.svg'),
		  url('/shape7.svg'),
		  url('/shape7.svg'),
		  url('/shape10.svg');
		
		background-position: 
		  10px 80px,   
		  90% 120px,  
		  100% 320px,
		  0px 0px,
		  100% 0px,
		  0px 340px,
		  0px 450px,
		  120% 700px,
		  30% 1100px,
		  0% 2200px;
		
		background-repeat: no-repeat;
  
		background-size: 
		  90px 90px,   /* Tamaño para miniphone1 */
		  90px 90px,   /* Tamaño para miniphone2 */
		  50px 50px,   /* Tamaño para miniphone3 */
		  auto,          /* Tamaño original para shape2 */
		  auto,          /* Tamaño original para shape3 */
		  auto,          /* Tamaño original para shape4 */
		  auto,          /* Tamaño original para shape5 */
		  auto,          /* Tamaño original para shape6 */
		  auto,          /* Tamaño original para shape7 */
		  auto;          /* Tamaño original para shape10 */
	  }

	/* Estilos para pantallas grandes (escritorios) */
	@media (min-width: 1024px) {
	  body {
		background-image: 
		  url('/miniphone1.png'),
		  url('/miniphone2.png'),
		  url('/miniphone3.png'),
		  url('/shape2.svg'),
		  url('/shape3.svg'),
		  url('/shape4.svg'),
		  url('/shape5.svg'),
		  url('/shape6.svg'),
		  url('/shape7.svg'),
		  url('/shape10.svg');
		
		background-position: 
		  80px 80px,   63% 420px,  90% 520px,
		  0px 0px,
		  100% 0px,
		  0px 340px,
		  0px 450px,
		  120% 700px,
		  30% 1100px,
		  0% 2200px;
		
		background-repeat: no-repeat;
  
		background-size: 
		  100px 100px,   /* Tamaño para miniphone1 */
		  130px 130px,   /* Tamaño para miniphone2 */
		  100px 100px,   /* Tamaño para miniphone3 */
		  auto,          /* Tamaño original para shape2 */
		  auto,          /* Tamaño original para shape3 */
		  auto,          /* Tamaño original para shape4 */
		  auto,          /* Tamaño original para shape5 */
		  auto,          /* Tamaño original para shape6 */
		  auto,          /* Tamaño original para shape7 */
		  auto;          /* Tamaño original para shape10 */
	  }
	}
  </style>
  