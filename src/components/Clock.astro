<script>
    // add 15 minutes to the date
    const dateFinal = new Date().getTime() + 15 * 60 * 1000;
    
    // const days = document.getElementById('days');
    // const hours = document.getElementById('hours');
    const minutes = document.getElementById('minutes');
    const seconds = document.getElementById('seconds');

    const init = ()=>{

        const dateNow = new Date().getTime();
        const timeLeft = dateFinal - dateNow;

        const day = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        const hour = Math.floor((timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minute = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const second = Math.floor((timeLeft % (1000 * 60)) / 1000);

        if (
            //!days  || 
            //!hours || 
            !minutes || 
            !seconds
        ) return;

        // days.innerHTML = day < 10 ? `0${day}` : day.toString();
        // hours.innerHTML = hour < 10 ? `0${hour}` : hour.toString();
        minutes.innerHTML = minute < 10 ? `0${minute}` : minute.toString();
        seconds.innerHTML = second < 10 ? `0${second}` : second.toString();



    }

    setInterval(init, 1000);


</script>