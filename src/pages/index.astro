<style>

#solucao::before {
	content: "";
	display: block;
	width: 100px;
	height: 5px;
	position: absolute;
	bottom: 0px;
	left: 50%;
	transform: translateX(-50%);
	color: aliceblue;
	background-color: #ffc20b;
	z-index: -1;
}

#problema::before {
	content: "";
	display: block;
	width: 180px;
	height: 5px;
	position: absolute;
	bottom: 0px;
	left: 50%;
	transform: translateX(-50%);
	color: aliceblue;
	background-color: #ff0b0b;
	z-index: -1;
}

.float {
	animation: float 6s infinite;
}

@keyframes float {
            0% {
                transform: translateY(0) translateX(0);
            }
            25% {
                transform: translateY(-20px) translateX(20px);
            }
            50% {
                transform: translateY(0) translateX(-20px);
            }
            75% {
                transform: translateY(20px) translateX(20px);
            }
            100% {
                transform: translateY(0) translateX(0);
            }
		}

</style>